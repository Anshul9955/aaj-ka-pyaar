// ğŸ“… DAILY MESSAGE (change ONLY this line daily)
const todaysMessage = "Aaj ka pyaar thoda sa tum ho, thoda sa mera intezaar ğŸ’—";

// Logic
function openCard(num) {
  document.getElementById("popupText").innerText = messages[num];
  document.getElementById("popup").style.display = "block";
}

function closeCard() {
  document.getElementById("popup").style.display = "none";
}

document.getElementById("dailyMessage").innerText = todaysMessage;
document.getElementById("date").innerText = new Date().toDateString();
